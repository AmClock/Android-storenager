<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E3E1">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline23"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/guideline22"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <FrameLayout style="@style/cardWrap">

                <ImageView
                    style="@style/imgBox"
                    android:src="@drawable/chum" />

                <TextView style="@style/nameBox" />

                <TextView style="@style/numBox" />

                <TextView style="@style/dayBox" />
                <TextView
                    android:id="@+id/chumchrum"
                    android:text="처음처럼"
                    style="@style/nameText" />

                <TextView
                    android:id="@+id/chumchrum_num"
                    style="@style/numText"/>

                <TextView
                    android:id="@+id/chumchrum_Date"
                    style="@style/dayText"/>

                <EditText
                    android:id="@+id/et_1"
                    style="@style/edBox"/>

                <Button
                    android:id="@+id/btn_1"
                    style="@style/btn_delete" />
            </FrameLayout>


            <FrameLayout style="@style/cardWrap">

                <ImageView
                    android:id="@+id/imageView2"
                    style="@style/imgBox"
                    android:src="@drawable/chcl" />

                <TextView style="@style/nameBox" />

                <TextView style="@style/numBox" />

                <TextView style="@style/dayBox" />

                <EditText
                    android:id="@+id/et_2"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:hint="입력 수량"
                    android:inputType="number"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_2"
                    style="@style/btn_delete" />

                <TextView
                    android:id="@+id/chammisuclassic"
                    android:text="참이슬클래식"
                    style="@style/nameText" />
                <TextView
                    android:id="@+id/chammisuclassic_num"
                    style="@style/numText"/>

                <TextView
                    android:id="@+id/chammisuclassic_Date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="XX년도"
                    android:textColor="#000"
                    android:textSize="15dp" />

            </FrameLayout>

            <FrameLayout style="@style/cardWrap">

                <ImageView
                    style="@style/imgBox"
                    android:src="@drawable/chfr" />

                <TextView style="@style/nameBox" />

                <TextView style="@style/numBox" />

                <TextView style="@style/dayBox" />

                <EditText
                    android:id="@+id/et_3"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:hint="입력 수량"
                    android:inputType="number"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_3"
                    style="@style/btn_delete" />

                <TextView
                    android:id="@+id/chammisufresh"
                    android:text="참이슬후래쉬"
                    style="@style/nameText" />


                <TextView
                    android:id="@+id/chammisufresh_num"
                    style="@style/numText"/>

                <TextView
                    android:id="@+id/chammisufresh_Date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="XX년도"
                    android:textColor="#000"
                    android:textSize="15dp" />
            </FrameLayout>


            <FrameLayout style="@style/cardWrap">

                <ImageView
                    style="@style/imgBox"
                    android:src="@drawable/cass" />

                <TextView style="@style/nameBox" />

                <TextView style="@style/numBox" />

                <TextView style="@style/dayBox" />

                <EditText
                    android:id="@+id/et_4"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:hint="입력 수량"
                    android:inputType="number"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_4"
                    style="@style/btn_delete" />


                <TextView
                    android:id="@+id/cass"
                    android:text="카스"
                    style="@style/nameText" />

                <TextView
                    android:id="@+id/cass_num"
                    style="@style/numText"/>

                <TextView
                    android:id="@+id/cass_Date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="XX년도"
                    android:textColor="#000"
                    android:textSize="15dp" />
            </FrameLayout>

            <FrameLayout style="@style/cardWrap">

                <ImageView
                    style="@style/imgBox"
                    android:src="@drawable/hitee" />

                <TextView style="@style/nameBox" />

                <TextView style="@style/numBox" />

                <TextView style="@style/dayBox" />

                <EditText
                    android:id="@+id/et_5"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:hint="입력 수량"
                    android:inputType="number"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_5"
                    style="@style/btn_delete" />

                <TextView
                    android:id="@+id/hite"
                    android:text="하이트"
                    style="@style/nameText" />


                <TextView
                    android:id="@+id/hite_num"
                    style="@style/numText"/>

                <TextView
                    android:id="@+id/hite_Date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="XX년도"
                    android:textColor="#000"
                    android:textSize="15dp" />
            </FrameLayout>

            <FrameLayout style="@style/cardWrap">

                <ImageView
                    style="@style/imgBox"
                    android:src="@drawable/kloud" />

                <TextView style="@style/nameBox" />

                <TextView style="@style/numBox" />

                <TextView style="@style/dayBox" />

                <EditText
                    android:id="@+id/et_6"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:hint="입력 수량"
                    android:inputType="number"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_6"
                    style="@style/btn_delete" />

                <TextView
                    android:id="@+id/kloud"
                    android:text="클라우드"
                    style="@style/nameText" />

                <TextView
                    android:id="@+id/kloud_num"
                    style="@style/numText"/>


                <TextView
                    android:id="@+id/kloud_Date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="XX년도"
                    android:textColor="#000"
                    android:textSize="15dp" />
            </FrameLayout>
        </LinearLayout>

    </ScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />


</android.support.constraint.ConstraintLayout>
